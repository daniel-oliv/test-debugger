  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**",
      ],
      "preLaunchTask": {
        "type": "npm",
        "script": "clear-build",
        "group": "build",
        "problemMatcher": [],
        "label": "npm: clear-build",
        /*"detail": "npm run clear && npm run build-npx" */
      },
      "program": "${workspaceFolder}\\src\\main.ts",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}